<div class="movie-card">
  <%= image_tag movie.poster_url %>

  <div class="movie-infos">
    <h2 title="<%= movie.title %>">
      <%= movie.title %>
    </h2>
    <%= link_to "#", data: {toggle: "modal", target: "#exampleModal3", custom: movie.id} do %>
      <i class="fas fa-plus-circle ml-2"></i>
    <% end %>
  </div>
</div>

<%# -----Modal------ %>
<div class="modal fade" id="exampleModal3" tabindex="-1" role="dialog" aria-labelledby="exampleModal3Label" aria-hidden="true">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">Add a new movie</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= simple_form_for ([@list, @bookmark]) do |f| %>
        <%= f.input :movie, collection: Movie.all %>
        <%= f.input :comment, label: movie.title  %>
        <div class="modal-footer">
        <%= f.submit "Add moviffff", class:"btn btn-dark rounded" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
   <%# -----Modal end ------ %>
