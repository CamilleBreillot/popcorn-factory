<div class="list-movies" data-search-movies-target="list">
  <% if @movies.length > 0 %>
    <% @movies.each do |movie| %>
      <%= render "lists/movie-info", movie: movie %>
    <% end %>
  <% else %>
    <div class="section-no-movies-found">
      <p>No movies found, try again!</p>
    </div>
  <% end %>
</div>
